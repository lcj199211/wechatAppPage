/* pages/login/login.wxss */

.login-mian,.login-from{
  width: 100%;
  height: 100%;
}

.login-mian-content{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.login-main-img{
  width:300rpx;
  height:300rpx;
}

.login-main-img image{
  width: 100%;
  height: 100%;
}

.login-from-content{
  display: flex;
  flex-wrap: wrap;
  height: 400rpx;
  justify-content: center;
}

.login-from-input{
  display: flex;
  width: 100%;
  height: 70rpx;
  font-size: 30rpx;
  align-items: center;
  justify-content: center;
}

.login-from-input .loginLab{
  padding-right: 20rpx;
}

.login-from-input .inputText{
  width: 560rpx;
  padding: 0 20rpx;  
  height: 70rpx;
  border-bottom: 1px solid #eee;
}

.login-from-input .labPadding{
  padding-right:50rpx;
}

.login-BtnView{
  width: 80%;
}
