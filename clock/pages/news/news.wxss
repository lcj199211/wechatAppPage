/* pages/news/news.wxss */

.news-conter{
  width: 100%;
  height: 100%;
}

.news-list{
  height: 120rpx;
  display: flex;
  border-bottom: 1px solid #eee;
  padding: 20rpx;
}
.news-list-left{
  width: 70%;
  height: 100%;
  overflow: hidden;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}
.news-list-left text{
  width: 100%;

}
.news-list-left text:first-child{
  font-size: 32rpx;
}
.news-list-left text:last-child,.news-list-right text:last-child{
  font-size: 28rpx;
  color: #a0a0a0;
}
.news-list-right{
  width: 30%;
  height: 100%;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.news-list-right text:first-child{
  font-size: 28rpx;
  color: red;
}

.news-list-right text{
  width: 100%;
  text-align: center;
}

.news-null{
  margin-top: 50%;
  text-align: center;
  font-size: 30rpx;
  color: #888;
}


.news-nav{
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #eee;
}

.nav-left{
  width: 50%;
  font-size: 30rpx;
  display: flex;
  height: 100%;
  align-items: center;
  justify-content: center;
}


.nav-left.selected {
  color:#0190a0;
  border-bottom:2px solid #0190a0;
}
